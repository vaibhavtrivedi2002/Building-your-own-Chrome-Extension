{
  "manifest_version": 3,
  "name": "Programming Practice Companion",
  "version": "1.0",
  "description": "Generate coding practice based on webpages",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
